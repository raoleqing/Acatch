<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".my.ForgetPassword">

    <TextView
        style="@style/activity_text1_type4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="忘记密码"/>

    <EditText
        style="@style/activity_text1_type3"
        android:id="@+id/phone_text"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00000000"
        android:layout_marginTop="40dp"
        android:hint="请输入手机号码"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E5E5E5" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            style="@style/activity_text1_type3"
            android:id="@+id/code_text"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#00000000"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="number"
            android:singleLine="true">
        </EditText>

        <TextView
            android:id="@+id/get_code"
            style="@style/activity_text7_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="获取验证码" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E5E5E5" />


    <EditText
        style="@style/activity_text1_type3"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:hint="设置新的密码"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E5E5E5" />


    <Button
        style="@style/activity_text2_type4"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_search_normal11"
        android:text="确定"/>



</LinearLayout>