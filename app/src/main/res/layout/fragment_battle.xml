<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.event.BattleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:background="@color/text1" />

        <TextView
            android:id="@+id/title_text"
            style="@style/activity_text8_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="当前阵容" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/home_name"
            style="@style/activity_text2_type2"
            android:layout_width="108dp"
            android:layout_height="34dp"
            android:background="@mipmap/home_nam_bg"
            android:stateListAnimator="@null"
            android:text="快船" />

        <Button
            android:id="@+id/away_name"
            style="@style/activity_text6_type2"
            android:layout_width="108dp"
            android:layout_height="34dp"
            android:background="@mipmap/away_name_bg"
            android:stateListAnimator="@null"
            android:text="湖人" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/football_layout"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@mipmap/icon_playground">

            <RelativeLayout
                android:id="@+id/football_zhenrong1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/player_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/player_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="116dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/player_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="196dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player_icon"
                        style="@style/activity_text2_type2"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:background="@mipmap/football_jersey_home"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/player_name"
                        style="@style/activity_text2_type0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name" />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/football_zhenrong2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/player2_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/player2_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="116dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/player2_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="196dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player2_icon"
                        style="@style/activity_text2_type2"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:background="@mipmap/football_jersey_goalkeeper_away"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/player2_name"
                        style="@style/activity_text2_type0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name" />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/blueball_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/icon_basketball_playground"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/blueball_zhenrong1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="71dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball_member1"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_away"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball_name1"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball_member2"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_away"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball_name2"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball_member3"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_away"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball_name3"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="181dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball_member4"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_away"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball_name4"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball_member5"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_away"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball_name5"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/blueball_zhenrong2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="71dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball2_member1"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_home"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball2_name1"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball2_member2"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_home"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball2_name2"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball2_member3"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_home"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball2_name3"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="181dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball2_member4"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_home"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball2_name4"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/blue_ball2_member5"
                            style="@style/activity_text2_type2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:background="@mipmap/basketball_jersey_home"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/blue_ball2_name5"
                            style="@style/activity_text2_type0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/no_data1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="暂无数据"
            android:visibility="gone" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:background="@color/text1" />

        <TextView
            style="@style/activity_text8_type3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="阵容变化" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/team1Logo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="center" />


                    <TextView
                        android:id="@+id/team1Name"
                        style="@style/activity_text8_type0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ball_recycler1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"></androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                    <TextView
                        android:id="@+id/team2Name"
                        style="@style/activity_text8_type0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="" />

                    <ImageView
                        android:id="@+id/team2Logo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="6dp"
                        android:scaleType="center" />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ball_recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"></androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/no_data2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="暂无数据"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>