<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".score.BallTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                style="@style/activity_text7_type4"
                android:id="@+id/game_type1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/button_background_selector"
                android:text="进行中"/>


            <View
                android:id="@+id/game_type1_view"
                android:layout_width="14dp"
                android:layout_height="2dp"
                android:background="@color/text1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                style="@style/activity_text10_type2"
                android:id="@+id/game_type2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/button_background_selector"
                android:text="未开始"/>

            <View
                android:id="@+id/game_type2_view"
                android:layout_width="14dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:background="@color/text1" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                style="@style/activity_text10_type2"
                android:id="@+id/game_type3"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/button_background_selector"
                android:text="赛程"/>

            <View
                android:id="@+id/game_type3_view"
                android:layout_width="14dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:background="@color/text1" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                style="@style/activity_text10_type2"
                android:id="@+id/game_type4"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/button_background_selector"
                android:text="赛果"/>

            <View
                android:id="@+id/game_type4_view"
                android:layout_width="14dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:background="@color/text1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                style="@style/activity_text10_type2"
                android:id="@+id/game_type5"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/button_background_selector"
                android:text="我的关注"/>

            <View
                android:id="@+id/game_type5_view"
                android:layout_width="14dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:background="@color/text1" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_01"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ball_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >
    </androidx.viewpager.widget.ViewPager>



</LinearLayout>