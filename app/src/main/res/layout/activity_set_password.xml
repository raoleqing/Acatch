<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".my.SetPassword">


    <TextView
        style="@style/activity_text1_type4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="设置账号密码"/>

    <EditText
        style="@style/activity_text1_type3"
        android:id="@+id/password_text1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00000000"
        android:layout_marginTop="40dp"
        android:hint="请设置密码"
        android:inputType="textPassword"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E5E5E5" />


    <EditText
        style="@style/activity_text1_type3"
        android:id="@+id/password_text2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="请设置密码"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E5E5E5" />


    <Button
        style="@style/activity_text2_type4"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_search_normal11"
        android:text="确定"/>



</LinearLayout>