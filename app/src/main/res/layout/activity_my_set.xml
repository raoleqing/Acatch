<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1"
    tools:context=".my.MySetActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/push_but_layout01"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_background_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activity_text1_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="仅通知关注比赛" />

            <ImageView
                android:id="@+id/push_but_icon01"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/slide_off" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_01" />

        <RelativeLayout
            android:id="@+id/push_but_layout02"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_background_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activity_text1_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="进球震动"
               />

            <ImageView
                android:id="@+id/push_but_icon02"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/slide_off"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_01" />

        <RelativeLayout
            android:id="@+id/push_but_layout03"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_background_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activity_text1_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="进球铃声" />

            <ImageView
                android:id="@+id/push_but_icon03"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/slide_off"  />
        </RelativeLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/push_but_layout04"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_background_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activity_text1_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="防止休眠" />

            <ImageView
                android:id="@+id/push_but_icon04"
                android:layout_width="51dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/slide_off"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_01"/>


        <RelativeLayout
            android:id="@+id/clear_cache"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                style="@style/activity_text1_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除缓存" />



            <TextView
                android:id="@+id/cache_text"
                style="@style/activity_text1_type5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="0.0M  " />

        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sign_out"
            style="@style/activity_text3_type3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:background="@drawable/button_background_selector"
            android:text="退出登录" />

    </LinearLayout>




    </LinearLayout>