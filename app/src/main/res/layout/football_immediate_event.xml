<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="15dp"
    android:gravity="center_horizontal"
    tools:context=".score.ImmediateEvent">


    <TextView
        style="@style/activity_text7_type1"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/bg_search_normal18"
        android:text="比赛结束 1-1"/>


    <View
        android:layout_width="1dp"
        android:layout_height="46dp"
        android:background="@color/text1"
        android:layout_centerHorizontal="true"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ie_recycler1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        style="@style/activity_text7_type1"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:background="@drawable/bg_search_normal18"
        android:text="上半场 1-1"/>

    <View
        android:layout_width="1dp"
        android:layout_height="46dp"
        android:background="@color/text1"
        android:layout_centerHorizontal="true"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ie_recycler2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        style="@style/activity_text7_type1"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:background="@drawable/bg_search_normal18"
        android:text="比赛开始"/>


</LinearLayout>