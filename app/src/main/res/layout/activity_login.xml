<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/registered_bg">

        <ImageView
            android:id="@+id/close_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="20dp"
            android:scaleType="center"
            android:src="@mipmap/navbar_icon_cancel"/>


        <TextView
            style="@style/activity_text1_type4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="欢迎来到雷速情报"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <EditText
            style="@style/activity_text1_type3"
            android:id="@+id/uername"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#00000000"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E5E5E5" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                style="@style/activity_text1_type3"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#00000000"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:layout_marginRight="80dp"
                android:singleLine="true">
            </EditText>

            <ImageView
                android:id="@+id/shwo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_password_hidden"/>

            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/shwo_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:background="@mipmap/registered_icon_delete"/>



        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E5E5E5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/myCheckbox"
                style="@style/activity_text6_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/myradio_buttom1"
                android:paddingLeft="6dp"
                android:text="我已认真阅读并同意"
                />

            <TextView
                android:id="@+id/protocol"
                style="@style/activity_text7_type1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="《雷速情报用户协议》"/>

        </LinearLayout>




        <Button
            style="@style/activity_text2_type4"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_search_normal11"
            android:text="登录"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">


            <TextView
                android:id="@+id/registered"
                style="@style/activity_text7_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册账号" />



            <TextView
                android:id="@+id/forget_password"
                style="@style/activity_text7_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码" />


        </RelativeLayout>




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qq_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@mipmap/registered_icon_qq_bt" />


        <ImageView
            android:id="@+id/wexin_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/registered_icon_wechat_bt" />


    </LinearLayout>





</LinearLayout>