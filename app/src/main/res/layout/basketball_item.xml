<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <TextView
           android:id="@+id/end_title"
           style="@style/activity_text8_type2"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@color/bg1"
           android:gravity="center"
           android:visibility="gone"
           android:text="已结束"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/match_event_name"
                style="@style/activity_text6_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2NBA常规赛 09:30"/>


            <TextView
                android:id="@+id/match_status"
                style="@style/activity_text6_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="未开始"/>


            <ImageView
                android:id="@+id/is_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">






                    <TextView
                        android:id="@+id/home_team_name"
                        style="@style/activity_text8_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="火箭"/>


                    <ImageView
                        android:id="@+id/home_team_logoUrl"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        />



                </LinearLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/tv_score1"
                        style="@style/activity_text8_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="VS"/>

                    <TextView
                        android:id="@+id/tv_score2"
                        style="@style/activity_text8_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="10 - 10"/>
                </RelativeLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/away_team_logoUrl"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:id="@+id/away_teamName"
                        style="@style/activity_text8_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="火箭"/>




                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>





</RelativeLayout>