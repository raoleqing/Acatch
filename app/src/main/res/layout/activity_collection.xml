<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.CollectionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/filter"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/football"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/bg_search_normal1"
                android:text="足球"/>


            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/blueBall"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textColor="@color/text1"
                android:textSize="15sp"
                android:background="@drawable/bg_search_normal2_host"
                android:text="蓝球"/>



        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_01"/>


    <LinearLayout
        android:id="@+id/score_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_host"
        android:orientation="vertical">

    </LinearLayout>





</LinearLayout>