<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_01"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                style="@style/activity_text1_type3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:minLines="2"
                android:text="巴西国际vs桑托斯首发：XXX先发领衔三"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/item_time"
                    style="@style/activity_text1_type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="19:30 巴西国际vs桑托斯"/>

                <TextView
                    android:id="@+id/Topping"
                    style="@style/activity_text7_type1"
                    android:layout_width="34dp"
                    android:layout_height="16dp"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_search_normal14"
                    android:gravity="center"
                    android:text="置顶"/>


            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="center"
            />


    </LinearLayout>


</LinearLayout>
