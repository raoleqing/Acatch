<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/item_view"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">



    <TextView
        android:id="@+id/match_name"
        style="@style/activity_text8_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2NBA常规赛 09:30"/>


    <TextView
        android:id="@+id/match_status"
        style="@style/activity_text6_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="未开始"/>

    <ImageView
        android:id="@+id/is_collection"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_collect_default"
        android:scaleType="center" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/home_team_name"
                style="@style/activity_text8_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="火箭"/>


            <ImageView
                android:id="@+id/home_team_icon"
                android:layout_width="22dp"
                android:layout_height="22dp" />



        </LinearLayout>



        <TextView
            style="@style/activity_text7_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.8"
            android:text="VS"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/team_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                />

            <TextView
                android:id="@+id/team_name"
                style="@style/activity_text8_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="火箭"/>




        </LinearLayout>


    </LinearLayout>




</RelativeLayout>