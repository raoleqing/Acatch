<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:paddingTop="10dp"
    android:id="@+id/list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@mipmap/icon_def_avatar"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    style="@style/activity_text1_type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="杨毅"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/icon_certification"/>
            </LinearLayout>



            <TextView
                android:id="@+id/user_desc"
                style="@style/activity_text10_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="人人都知道你要交易，意味着你可能偏偏不…"/>

            <TextView
                android:id="@+id/user_wechat"
                style="@style/activity_text6_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="微信：YyangYi1234 · QQ：22345678"/>



        </LinearLayout>


</LinearLayout>
