<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!--占位符-->
    <View
        android:id="@+id/view_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_below="@+id/view_holder">

        <TextView
            android:id="@+id/activity_title"
            style="@style/activity_text8_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="180dp"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            tools:text="" />

        <ImageView
            android:id="@+id/activity_return"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background_selector"
            android:src="@mipmap/navbar_icon_back_black"
            android:scaleType="center"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_01"
            android:layout_alignParentBottom="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_background_selector"
            android:src="@mipmap/navbar_icon_collect_default"
            android:orientation="horizontal">




            <ImageView
                android:id="@+id/tv_collection"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background_selector"
                android:src="@mipmap/navbar_icon_share"
                android:visibility="gone"
                android:scaleType="center"/>

            <ImageView
                android:id="@+id/tv_share"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:scaleType="center"/>



        </LinearLayout>


        <TextView
            android:id="@+id/activity_text"
            style="@style/activity_text7_type3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            tools:text="" />








    </RelativeLayout>





</RelativeLayout>