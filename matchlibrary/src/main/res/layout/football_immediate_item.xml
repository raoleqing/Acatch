<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_view"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <ImageView
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/bg3"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/middle"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/bg_search_normal21"
        android:scaleType="center"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/middle"
        android:orientation="horizontal"
        android:gravity="right">


        <TextView
            android:id="@+id/home_time"
            style="@style/activity_text8_type0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:text="12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/home_time"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/home_text"
                    style="@style/activity_text10_type1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="6dp"
                    android:gravity="right"
                    android:paddingBottom="15dp"
                    android:text="艾克森艾克森艾克森艾克森艾克森艾克森艾克森"/>


                <ImageView
                    android:id="@+id/home_icon"
                    android:layout_width="14dp"
                    android:layout_height="18dp"
                    android:scaleType="center"/>

            </LinearLayout>



        </LinearLayout>




    </RelativeLayout>



    <LinearLayout
        android:id="@+id/away_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/middle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/away_time"
            style="@style/activity_text8_type0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/away_icon"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:scaleType="center"/>


            <TextView
                android:id="@+id/away_text"
                style="@style/activity_text10_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingBottom="15dp"
                android:text="艾克森艾克森艾克森艾克森艾克森艾克森艾克森" />


        </LinearLayout>








    </LinearLayout>


    

</RelativeLayout>
