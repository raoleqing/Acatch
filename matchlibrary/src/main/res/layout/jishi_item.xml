<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/middle"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/bg_search_normal21"
                android:scaleType="center" />



            <TextView
                android:id="@+id/title_text1"
                style="@style/activity_text10_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="一节 9:09"/>


        </LinearLayout>

        <TextView
            android:id="@+id/title_text2"
            style="@style/activity_text8_type0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:gravity="right"
            android:text="2-5" />


    </LinearLayout>


    <TextView
        android:id="@+id/item_text"
        style="@style/activity_text8_type1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:text="路易斯·威廉姆斯 弧顶3分跳投不中"
        android:layout_marginLeft="37dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/bg_search_normal20"
        />


</LinearLayout>
